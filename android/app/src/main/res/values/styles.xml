        <item name="android:textColor">@color/mainBlueText</item>
        <item name="android:textSize">@dimen/default_text_size_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="OrderFieldTextView">
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">@dimen/default_text_size_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="OrderFieldYachtTextView">
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">@dimen/default_text_size_x_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="OrderFieldPhoneTextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/default_text_size_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--Order Info -->

    <style name="OrderInfoFieldTitleTextView">
        <item name="android:textColor">@color/mainBlueText</item>
        <item name="android:textSize">@dimen/default_text_size_small</item>
