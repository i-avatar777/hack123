    <!-- Main Screen -->
    <style name="EmptyOrderTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mainBlueText</item>
        <item name="android:textSize">@dimen/default_text_size_x</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
